@page
@model LoginModel

@*@{
    ViewData["Title"] = "Log in";
}*@

@*<h1>@ViewData["Title"]</h1>*@
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/css/Login.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body class="bdy">
    <div class="background"></div>
    <div class="block container">
        <div class="row">
            <div class="content col-lg-6 ">
                <div class="logo"><h2><strong><i class='bx bx-bowl-hot'></i>KINKANMAI</strong></h2> </div>
            </div>
            <div class="logreg-box col-lg-6">
                <div class="form-box login">
                    <form id="account" method="post">
                        <h2 class="mb-4"><strong>Sign In</strong></h2>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="ip-box form-floating mb-3">
                            <span class="icon"><i class='bx bx-envelope'></i></span>
                            <input asp-for="Input.Email" class=" text-white bg-transparent form-control" autocomplete="username" aria-required="true" required />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="ip-box form-floating mb-3">
                            <span class="icon"><i class='bx bx-lock-alt'></i></span>
                            <input asp-for="Input.Password" class="text-white bg-transparent form-control" autocomplete="current-password" aria-required="true" type="password" required />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="remember checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input type="checkbox" class="form-check-input " asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                            <a href="#">Forgot password?</a>
                        </div>
                        <button id="login-submit" type="submit" class="btnBT"><strong>Sign In</strong></button>
                        <div class="login-register">
                            <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}